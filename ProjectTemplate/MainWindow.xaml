<Window x:Class="ProjectTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ProjectTemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0"  Grid.Column="0" Grid.ColumnSpan="3" Background="DeepSkyBlue">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="Develop by Calvin" Foreground="Blue" FontSize="20"/>
            </Border>
            <Border Grid.Row="0"  Grid.Column="1">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding AppName}" Foreground="White" FontSize="40"/>
            </Border>
            <Border Grid.Row="0" Grid.Column="2" Margin="5">
                <materialDesign:PopupBox 
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Padding="2,0,2,0">
                    <materialDesign:PopupBox.ToggleContent>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Menu"
                                     Width="30" Height="30"
                                     VerticalAlignment="Center"
                                     Margin="5"/>
                            <TextBlock Text="Menu" VerticalAlignment="Center"/>
                        </StackPanel>
                    </materialDesign:PopupBox.ToggleContent>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" Command="{Binding Change2Eng}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <!-- 地球圖示 -->
                                <materialDesign:PackIcon Kind="AlphaW" 
                                         Width="20" Height="20" 
                                         VerticalAlignment="Center" 
                                         Margin="0,0,8,0"/>
                                <!-- 文字 -->
                                <TextBlock Text="English" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" Command="{Binding Change2Chin}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <!-- 地球圖示 -->
                                <materialDesign:PackIcon Kind="IdeogramCjk" 
                                         Width="20" Height="20" 
                                         VerticalAlignment="Center" 
                                         Margin="0,0,8,0"/>
                                <!-- 文字 -->
                                <TextBlock Text="中文" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"  Command="{Binding EngineerOnOff}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <!-- 地球圖示 -->
                                <materialDesign:PackIcon Kind="AccountCheck" 
                                         Width="20" Height="20" 
                                         VerticalAlignment="Center" 
                                         Margin="0,0,8,0"/>
                                <!-- 文字 -->
                                <TextBlock Text="Engineer Mode" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </materialDesign:PopupBox>
            </Border>
            <StackPanel Grid.Row="1"  Grid.Column="0">
                <Button
                    Width="150"
                    Height="50"
                    Command="{Binding Func1Button}"
                    Content="{Binding Func1Name}"
                    Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                    ToolTip="MaterialDesignFlatDarkButton"
                    Margin="5"
                    />

                <Button
                    Width="150"
                    Height="50"
                    Command="{Binding Func2Button}"
                    Content="{Binding Func2Name}"
                    Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                    ToolTip="MaterialDesignFlatDarkButton"
                    Margin="5"
                    />

                <Button
                    Width="150"
                    Height="50"
                    Command="{Binding SetUpButton}"
                    Content="{Binding SetUpName}"
                    Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                    ToolTip="MaterialDesignFlatDarkButton"
                    Margin="5"
                    />
            </StackPanel>
            <Border x:Name="MainUI" Grid.Row="1"  Grid.Column="1" Grid.ColumnSpan="2" Margin="5" CornerRadius="5" Background="AliceBlue">
                
                
            </Border>
        </Grid>
        
    </Grid>
</Window>
