<Window x:Class="ProjectTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ProjectTemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0"  Grid.Column="0" Grid.ColumnSpan="3" Background="DeepSkyBlue">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="Develop by Calvin" Foreground="Blue" FontSize="20"/>
            </Border>
            <Border Grid.Row="0"  Grid.Column="1">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding AppName}" Foreground="White" FontSize="40"/>
            </Border>
        </Grid>
        
    </Grid>
</Window>
